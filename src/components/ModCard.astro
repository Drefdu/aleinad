---
interface Props {
    item: Moder;
}

interface Moder {
    avatar: string;
    rol: string;
    discord: boolean;
    youtube: boolean;
    crown: boolean;
    name: string;
    alt: string;
    admin?: boolean;
}

const { item } = Astro.props;
let colorTag = '';

switch(item.rol) {
    case "Pizza Admin":
        colorTag = "admin__tag";
        break;
    case "Comandante Pepperoni":
        colorTag = 'comandante__tag';
        break;
    case "Patrulla Pepperoni":
        colorTag = "patrulla__tag";
        break;
    default:
        colorTag = "patrulla__tag";
        break
}
---

<div>
    <div class={`p-3 h-60 w-45 rounded-2xl mod__card ${item.admin ? 'admin__card' : 'bg-[var(--card-color)]'}`}>
        <img src={item.avatar} alt={item.alt} class=" rounded-full size-28
         m-auto">
        <div class="flex flex-row justify-center items-center gap-4 mt-5">
            {item.discord ? <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-discord text-[var(--normal-text)]" viewBox="0 0 16 16">
